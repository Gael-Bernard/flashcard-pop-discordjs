{
  "compilerOptions": {
    
    /* Javascript version */
    "target": "ES6",

    /* Module resolution */
    "module": "ES6",
    "esModuleInterop": true, /* Necessary to use "type": "module" */
    "moduleResolution": "Node",

    /* Compilation output */
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,

    /* Strict rules */
    "strictNullChecks": true // Undefined & null have to be explicitly mentioned as types
  },
  
}